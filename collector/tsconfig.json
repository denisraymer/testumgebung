{
  "include": ["src"],
  "extends": "../tsconfig.json",
  "exclude": ["**/node_modules", "build"],
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@assets": ["assets"],
      "@components": ["components"],
      "@constants": ["constants"],
      "@atoms": ["components/atoms"],
      "@hooks": ["hooks"],
      "@utils": ["utils"],
      "@types": ["types"]
    }
  },
  "references": [
    { "path": "../shared" }
  ]
}
